#footer {
  .footer-nav {
    display: flex;
    padding-left: 0;
    list-style: none;

    > li:not(:last-child) {
      margin-right: 1rem;
    }
  }

  .footer-nav > li > a,
  .subfooter-contact-info > a {
    color: white;
  
    &:hover {
      color: white;
    }
  
    &:visited {
      color: white;
    }
  
    &:active {
      color: white;
    }
  }

  hr {
    margin: 2rem 0;
  }

  .subfooter {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2rem;

    h5 {
      margin-bottom: 0;
    }

    i.icon {
      text-align: left;
    }

    .social {
      margin: 0;
      justify-content: flex-start;

      > a:not(:last-child) {
        margin-right: 0.25rem;
      }
    }

    .subfooter-social,
    .subfooter-contact,
    .subfooter-other {
      display: flex;
      flex-flow: column;

      > :last-child {
        margin: auto 0;
      }
    }

    .subfooter-other {
      max-width: @mobileBreakpoint;

      .theme-sites .logos .ui.grid {
        margin: 0;

        .column.logo {
          display: flex;
          align-items: center;
          padding-left: 0 !important;
          padding-right: 0 !important;
          
          > a.logo {
            flex: 1;

            &:not(:last-child) {
              margin-right: 1rem;
            }
          }
        }
      }

      .theme-sites .logos .logo img {
        margin-bottom: 0;
      }
    }

    .subfooter-info {
      display: flex;

      > div:not(:last-child) {
        margin-right: 8rem;
      }

      .subfooter-contact {
        .subfooter-contact-info {
          > a:not(:last-child) {
            margin-right: 1rem;
          }
        }
      }
    }
  }

  .text-right {
    text-align: right;
  }
}

@media screen and (max-width: @computerBreakpoint) {
  #footer {
    .subfooter {
      margin-bottom: 2rem;
      flex-direction: column;

      h5 {
        margin-bottom: 1rem;
      }

      .subfooter-info {
        justify-content: space-between;
        margin-bottom: 2rem;

        > div:not(:last-child) {
          margin-right: 0;
        }
      }
    }
  }
}

@media screen and (max-width: 500px) {
  #footer {
    .footer-nav {
      flex-flow: column;
    }

    .subfooter-info {
      flex-flow: column;

      > div:not(:last-child) {
        margin-bottom: 2rem;
      }

      h5 {
        margin-bottom: 1rem;
      }
    }
  }
}
